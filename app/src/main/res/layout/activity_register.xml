<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_login"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ribeye_marrow"
            android:foregroundGravity="center"
            android:gravity="center"
            android:textColor="#1d3557"
            android:text="Register"
            android:textSize="50dp"
            />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ribeye_marrow"
            android:textColor="#1d3557"
            android:text="Nama"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/ETRegisterNama"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="?android:attr/scrollbarSize"
            android:ems="10"
            android:gravity="center"
            android:background="@drawable/shape"
            android:fontFamily="@font/ribeye_marrow"
            android:hint="Nama"
            android:shadowColor="#9C27B0"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#939090"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#1d3557"
            android:fontFamily="@font/ribeye_marrow"
            android:text="Email"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/ETRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="?android:attr/scrollbarSize"
            android:ems="10"
            android:background="@drawable/shape"
            android:gravity="center"
            android:fontFamily="@font/ribeye_marrow"
            android:hint="Email"
            android:shadowColor="#9C27B0"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#939090"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#1d3557"
            android:fontFamily="@font/ribeye_marrow"
            android:text="Kata Sandi"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/ETRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="?android:attr/scrollbarSize"
            android:ems="10"
            android:background="@drawable/shape"
            android:gravity="center"
            android:fontFamily="@font/ribeye_marrow"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:shadowColor="#9C27B0"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#A8A8A8"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#1d3557"
            android:fontFamily="@font/ribeye_marrow"
            android:text="Konfirmasi Kata Sandi"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/ETRegisterKonfirmasiPassword"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="?android:attr/scrollbarSize"
            android:ems="10"
            android:background="@drawable/shape"
            android:fontFamily="@font/ribeye_marrow"
            android:gravity="center"
            android:hint="Konfirmasi Kata Sandi"
            android:inputType="textPassword"
            android:shadowColor="#9C27B0"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#A8A8A8"
            android:textSize="18dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/RShowPassword"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:text="Tampilkan Kata Sandi"
            />
        <Button
            android:id="@+id/Btn_Register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_loginbtn"
            android:fontFamily="@font/ribeye_marrow"
            android:text="Register"
            android:textSize="25dp"
            />
    </LinearLayout>
</LinearLayout>